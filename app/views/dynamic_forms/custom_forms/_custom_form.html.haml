%tr
  %td
    = custom_form.name
  %td
    = custom_form.submissions.count
  %td
    = custom_form.enabled
  %td
    = link_to custom_form_submissions_path(custom_form), class: 'btn btn-link btn-sm' do
      = icon('fas', 'eye', class: 'text-primary')
    = link_to edit_custom_form_path(custom_form), class: 'btn btn-link btn-sm' do
      = icon('fas', 'edit', class: 'text-success')
    = link_to custom_form, method: :delete, class: 'btn btn-link btn-sm', data: { confirm: 'Are you sure? ' } do
      = icon('fas', 'trash-alt', class: 'text-danger')
